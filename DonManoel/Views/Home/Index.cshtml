@model List<Core.Entities.Mesa>
@using CrossCutting

<div class="text-center">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        
        @foreach (var mesa in Model)
        {
        <div class="col">
            @if (mesa.EmUso)
            {
                <a href="/Sales/Order/@mesa.Id/@mesa.IdPedido">
                    <div class="box box-solid bg-secondary">
                        <div class="box-header">
                            <h4 class="box-title"><strong>Mesa <b>@mesa.Numero.ToString("000")</b></strong></h4>
                        </div>
                        <div class="box-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <i class="icon-Clock"></i> Tempo <br />
                                    @mesa.Tempo
                                </div>
                                <div class="col-sm-4">
                                    <i class="icon-Calculator"></i> Sub-Total <br />
                                    <b>@mesa.ValorPedido.Value.FormatMoney(false)</b>
                                </div>
                                <div class="col-sm-4">
                                    <i class="icon-User"></i> Atendente <br />
                                    @mesa.Atendente.FirstName()
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
            else
            {
                @*<a href="@Html.ActionLink("","Order","Sales",new { idmesa=mesa.Id})">*@
                <a href="/Sales/Order/@mesa.Id">
                    <div class="box box-solid bg-danger">
                        <div class="box-header">
                            <h4 class="box-title"><strong>Mesa <b>@mesa.Numero.ToString("000")</b></strong></h4>
                        </div>
                        <div class="box-body" style="font-size:30px;">
                            <div class="row">
                                <div class="col-sm-12">
                                    <img src="~/images/mesa.png" />
                                    <span>Livre</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }

        </div>

        }
    </div>
</div>
