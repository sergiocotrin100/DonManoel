@model Core.Entities.Pedido
@using CrossCutting
@inject Core.Interfaces.IUserSession usuario;



<div class="row" id="itens">




    <div class="col-xxxl-8 col-12">
        <div class="box">
            <div class="box-header bg-danger" style="display:inline-flex">
                <h4 style="margin-right:5px">Mesa @Model.IdMesa </h4>
                @{
                    var lstItens = Model.Itens;
                    if (lstItens == null)
                    {
                        lstItens = new List<Core.Entities.PedidoItem>();
                    }
                    //else
                    //    lstItens = Model.Itens.Where(item => item.IdStatusPedidoItem == (int)Settings.Status.PedidoItem.Pronto
                    //    || item.IdStatusPedidoItem == (int)Settings.Status.PedidoItem.Enviado
                    //    || item.IdStatusPedidoItem == (int)Settings.Status.PedidoItem.Solicitado).ToList();
                }
                @if (lstItens.Count > 1)
                {
                    <h4 class="box-title">PEDIDO (@lstItens.Count ITEMS)</h4>
                }
                else
                {
                    <h4 class="box-title">PEDIDO (1 ITEM)</h4>
                }

            </div>

            @{
                int qtdSolicitado = 0;
                int qtdCozinha = 0;
                int qtdPronto = 0;
                int qtdCancelado = 0;
                foreach (var item in lstItens)
                {

                    if (item.IdStatusPedidoItem == (int)Settings.Status.PedidoItem.Solicitado)
                    {
                        qtdSolicitado += 1;
                    }
                    if (item.IdStatusPedidoItem == (int)Settings.Status.PedidoItem.Enviado)
                    {
                        qtdCozinha += 1;
                    }
                    if (item.IdStatusPedidoItem == (int)Settings.Status.PedidoItem.Pronto)
                    {
                        qtdPronto += 1;
                    }
                    if (item.IdStatusPedidoItem == (int)Settings.Status.PedidoItem.Cancelado)
                    {
                        qtdCancelado += 1;
                    }
                }
            }

            <div class="box-body">

                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <button class="nav-link active" id="nav-solicitado-tab" data-bs-toggle="tab" data-bs-target="#nav-solicitado" type="button" role="tab" aria-controls="nav-solicitado" aria-selected="true">
                            Solicitado
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @qtdSolicitado
                                <span class="visually-hidden">Qtd Solicitado</span>
                            </span>
                        </button>
                        <button class="nav-link" id="nav-cozinha-tab" data-bs-toggle="tab" data-bs-target="#nav-cozinha" type="button" role="tab" aria-controls="nav-cozinha" aria-selected="false">
                            Cozinha
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @qtdCozinha
                                <span class="visually-hidden">Qtd Preparando</span>
                            </span>
                        </button>
                        <button class="nav-link" id="nav-entregue-tab" data-bs-toggle="tab" data-bs-target="#nav-entregue" type="button" role="tab" aria-controls="nav-entregue" aria-selected="false">
                            Entregue
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @qtdPronto
                                <span class="visually-hidden">Qtd Pronto</span>
                            </span>
                        </button>
                        <button class="nav-link" id="nav-cancelado-tab" data-bs-toggle="tab" data-bs-target="#nav-cancelado" type="button" role="tab" aria-controls="nav-cancelado" aria-selected="false">
                            Cancelado
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @qtdCancelado
                                <span class="visually-hidden">Qtd Cancelado</span>
                            </span>
                        </button>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-solicitado" role="tabpanel" aria-labelledby="nav-solicitado-tab">
                        @*solicitado inicio*@
                        <div class="table-responsive">
                            <table class="table product-overview">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (lstItens.Where(x=>x.IdStatusPedidoItem == (int)Settings.Status.PedidoItem.Solicitado).Count() == 0)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <h6 style="max-width: 24ch; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"> Nada para mostrar</h6>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var item in lstItens)
                                        {

                                            if (item.IdStatusPedidoItem == (int)Settings.Status.PedidoItem.Solicitado)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <i class="fa fa-cutlery" style="margin-top: -8px;color: red;"></i>
                                                            &nbsp;
                                                            <h6 style="max-width: 24ch; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">@item.Menu.Nome</h6>
                                                        </div>

                                                        @foreach (var excecao in item.Excecao)
                                                        {
                                                            <div style="display: inline-flex; margin-left: 20px;">
                                                                <span class="mdi mdi-subdirectory-arrow-right"></span>  <p><b>Sem</b> @excecao.Observacao</p>
                                                            </div><br />
                                                        }
                                                        @if (!string.IsNullOrEmpty(item.PontoCarne))
                                                        {
                                                            <div style="display: inline-flex; margin-left: 20px;">
                                                                <span class="mdi mdi-subdirectory-arrow-right"></span>  <p><b>Preparo da carne:</b> @item.PontoCarne</p>
                                                            </div><br />
                                                        }

                                                        <div class="act-btn d-flex justify-content-between">

                                                            <div class="text-center mx-5">
                                                                <a href="#" onclick="cancelarItem(@item.Id)" class="waves-effect waves-circle btn btn-circle btn-danger-light btn-xs mb-5"><i class="fa fa-trash"></i></a>
                                                                <small class="d-block">Cancelar</small>
                                                            </div>
